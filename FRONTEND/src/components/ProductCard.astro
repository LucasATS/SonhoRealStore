---
const { image, title, price, product_id, count } = Astro.props;
---

<a href={"/product/" + product_id} title="Acessar" class="product-card">
	<img src={image} alt={title} />

	<div class="details">
		<h1 class="title">{title}</h1>
	</div>
	<div class="details2">
		<p class="price">R$ {price.toFixed(2)}</p>
		<p>{count} vendidos</p>
	</div>
</a>

<style>
	.product-card {
		background-color: var(--principal);

		display: flex;
		flex-direction: column;

		/* outline: #cecece solid 0.5px; */
		border: transparent solid 2px;
		border-radius: 10px;

		margin: 0;
		padding: 0;
		width: 200px;
		height: 250px;

		box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.12);
	}
	img {
		display: flex;
		justify-self: center;
		align-self: center;
		width: 180px;
		height: 180px;
		object-fit: contain;
		border-radius: 10px 10px 0 0;
	}
	.details,
	.details2 {
		margin: 5px;
		text-align: left;
		display: flex;
		flex-direction: column;
		justify-content: left;
	}

	.details2 {
		margin-top: auto;
		flex-direction: row;
		justify-content: space-between;
		align-items: flex-end;
	}

	.title {
		margin: 0;
		font-size: 14px;
		font-weight: bold;
		color: var(--color-black);

		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		line-clamp: 2;
		-webkit-box-orient: vertical;
	}

	p {
		text-align: right;
		padding: 0;
		margin: 0;
		color: var(--color-black-click);
		font-size: 14px;
	}

	.price {
		color: var(--color-black);
		text-align: left;
		font-weight: bold;
		font-size: 15px;
	}

	.product-card:hover,
	.product-card:focus {
		outline: var(--color-black) solid 2px;
	}
	.product-card:active {
		outline: var(--color-black-click) solid 2px;
	}
</style>
