---
import { ViewTransitions } from "astro:transitions";
import { Cart } from "../components/Cart/index.jsx";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/global.css" />

		<script is:inline src="/cookies.js"></script>
		<script is:inline src="/controle.js"></script>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<section>
			<article>
				<slot />
			</article>
		</section>

		<Cart client:only />

		<footer>
			<section class="footer-content">
				<p>
					Esse site é apenas uma demonstração de loja. Consulte o
					<a href="https://github.com/LucasATS/SonhoRealStore"
						>GitHub do projeto</a
					>.
				</p>
				<p>
					Utilizamos cookies de terceiros para melhorar a experiência
				</p>
			</section>
			<div>&copy; 2024 Sonho Real Store | Desenvolvido por LucasATS</div>
		</footer>
	</body>
</html>
